<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="forecast"
            type="com.joenjogu.notesy.models.Forecast" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />


        <TextView
            android:id="@+id/item_day"
            android:text="@{}"
            android:layout_marginTop="@dimen/textview_margin"
            android:layout_marginStart="@dimen/textview_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="TODAY" />

        <TextView
            android:id="@+id/item_date"
            android:text="@{}"
            android:layout_marginTop="@dimen/textview_margin"
            android:layout_marginStart="@dimen/textview_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_day"
            tools:text="28th March" />

        <TextView
            android:id="@+id/item_temp_label"
            android:layout_marginBottom="@dimen/textview_margin"
            android:layout_marginStart="@dimen/textview_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="TEMPERATURE" />

        <TextView
            android:id="@+id/item_temp_value"
            android:text="@{}"
            android:layout_marginBottom="@dimen/textview_margin"
            android:layout_marginStart="@dimen/textview_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/item_temp_label"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="23" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>